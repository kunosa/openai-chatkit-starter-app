{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: dev (Node inspect)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "env": {
        "NODE_OPTIONS": "--inspect"
      },
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "serverReadyAction": {
        "pattern": "started server on .+, url: (https?://localhost:\\d+)",
        "action": "openExternally",
        "uriFormat": "%s"
      },
      "skipFiles": ["<node_internals>/**"],
      "port": 9229
    },
    {
      "name": "Attach to Next.js (9229)",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Chrome: debug client http://localhost:3000",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true
    }
  ],
  "compounds": [
    {
      "name": "Debug: Next.js + Chrome",
      "configurations": [
        "Next.js: dev (Node inspect)",
        "Chrome: debug client http://localhost:3000"
      ]
    }
  ]
}
